<UserControl x:Class="TestSystem.StartMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Border Height="300" Width="300" Grid.Row="1" Grid.Column="1" Background="#FFECECEC" >
            <StackPanel Margin="10">
                <Button Padding="10" Margin="0,0,0,5" Command="{Binding LoginCommand}">Войти</Button>
                <Button Padding="10" Margin="0,0,0,5" Command="{Binding RegisterCommand}">Зарегистрироваться</Button>
                <Button Padding="10" Margin="0,0,0,5" Command="{Binding StartTestingCommand}">Пройти тестирование</Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
